<h1><%= @user.name %></h1>
<h2><%= @user.email %></h2>

<div class="row center">
<div class="col-md-8 col-md-offset-2">
<h3>Course Progress</h3>
<div class="progress">
  <div id="total-progress-bar" class="progress-bar progress-bar-primary progress-bar-striped" role="progressbar" aria-valuenow="<%= @total_progress %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= @total_progress %>%">
    <span class="sr-only">40% Complete (success)</span>
  </div>
</div>
<hr>
<section>
	<h4>Unit 1: Confused Words</h4>
	<div class="progress">
    <div id="total-progress-bar" class="progress-bar progress-bar-primary progress-bar-striped" role="progressbar" aria-valuenow="<%= @unit1_progress %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= @unit1_progress %>%">
    		<span class="sr-only">60% Complete (success)</span>
  		</div>
	</div>
</section>

<section>
	<h4>Unit 2: Sentence Fragments</h4>
	<div class="progress">
  		<div id="unit-2-progress-bar" class="progress-bar progress-bar-primary progress-bar-striped" role="progressbar" aria-valuenow="<%= @unit2_progress %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= @unit2_progress %>%">
    		<span class="sr-only">40% Complete (success)</span>
  		</div>
	</div>
</section>

<section>
	<h4>Unit 3: Run-on Sentences</h4>
	<div class="progress">
  		<div id="unit-3-progress-bar" class="progress-bar progress-bar-primary progress-bar-striped" role="progressbar" aria-valuenow="<%= @unit3_progress %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= @unit3_progress %>%">
    		<span class="sr-only">30% Complete (success)</span>
  		</div>
	</div>
</section>